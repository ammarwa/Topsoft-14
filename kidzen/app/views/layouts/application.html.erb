<!DOCTYPE html>
<html>
<head>
  <title>Kidzen</title>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "http://yandex.st/bootstrap/3.0.2/css/bootstrap.min.css", media: "all" %>
<%= javascript_include_tag "http://yandex.st/bootstrap/3.0.2/js/bootstrap.min.js" %>

  <%= stylesheet_link_tag("general.css") %>
  <%= yield :stylesheet_includes %>
  <%= yield :javascript_includes %>

  <%= csrf_meta_tags %>
</head>
<body>
  <div class="locale_button">
    <div class="round_button">
      <%= link_to "Arabic", change_locale_path(locale: :ar), class: "round_inner" %>
    </div>
    <div class="round_button">
      <%= link_to "English", change_locale_path(locale: :en), class: "round_inner" %>
    </div>
  </div>
  <br/>

  <div id="alert_container">
    <% flash.each do |key, value| %>
      <div class="flash flash-<%= key %>">
        <%= value %>
      </div>
    <% end %>      
  </div>
  <%= yield %>

  <%= link_to "Sign out", signout_path, method: "delete" %>
  <%= link_to "Profile", current_user %>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>
