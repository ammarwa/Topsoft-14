<% # Layout for all of supervisor's pages %>
<% # Authors: Ahmed H. Ismail %>
<!DOCTYPE html>
<html>
<head>
  <title><%= t('supervisor_layout_title') %></title>
  <meta charset="utf-8">
  <%= stylesheet_link_tag    "supervisors", media: "all", "data-turbolinks-track" => true %>
  <%= yield :stylesheet_includes %>
  <%= javascript_include_tag "supervisors", "data-turbolinks-track" => true %>
  <%= javascript_include_tag("notification_action.js") %>
  <%= yield :javascript_includes %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="locale_button">
  <div class="round_button">
  <%= link_to "Arabic", change_locale_path(locale: :ar), class: "round_inner" %>
  </div>
  <div class="round_button">
  <%= link_to "English", change_locale_path(locale: :en), class: "round_inner" %>
  </div>
  </div>
  <br/>
  <%= yield %>
  <br/>
  <div id="left_panel">
    <div id="notifications_container">
    <% # To be filled by load_pending_notifications %>
    </div>
  </div>
</body>
</html>
