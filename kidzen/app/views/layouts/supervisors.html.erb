<% # Layout for all of supervisor's pages %>
<% # Authors: Ahmed H. Ismail %>
<!DOCTYPE html>
<html>
<head>
  <title><%= t('supervisor_layout_title') %></title>
  <meta charset="utf-8">
  <%= stylesheet_link_tag    "supervisors", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "supervisors", "data-turbolinks-track" => true %>
  <%= yield :javascript_includes %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="navbar-text pull-right">
<%= link_to "Arabic", change_locale_path(locale: :ar) %>
<%= link_to "English", change_locale_path(locale: :en) %>
</p>

<%= yield %>

<div id="left_panel">
  <div id="notifications_container"></div>
</div>
<!-- Script for loading pending notifications -->
<script type="text/javascript" language="javascript">    
function load_pending_notifications() {
            <%= remote_function(:url => {:controller => "notifications", :action => "pending"},
                                  :update => "notifications_container")%>
        };
</script>
</body>
</html>
