<% content_for :javascript_includes do %>
  <%= javascript_include_tag("supervisors_confirm_children.js") %>
<% end %>


<div class="round_button">
    <p class="round_inner"> 
    Click me
    </p>
  </div>

<% @children.each do |child| %>
  <div onclick="collapse(this)" class="collapsable_container" id="<%= child.registered_user.user_name %>" >
  <!-- Input is used for preserving state -->
  <div class ="round_button">
    <label class="header"><input type="checkbox" class="filter" disabled="true" /> 
      <p class="round_inner"><%= child.registered_user.full_name %></p>
    </label>
  </div>
  <!-- This is the div containing the actual content -->    
    <div class="collapsable_field">
    <!-- Display Child's attributes in a table -->
      <table class="child_attr_disp">
        <thead>
        <hr colspan="2"> <%= child.registered_user.nickname %>
        </thead>
        <tbody>
          <tr>
            <td>
              User Name
            </td>
            <td>
              <%= child.registered_user.username %>
            </td>
          </tr>
          <tr>
            <td>
              Gender
            </td>
            <td>
              <%= child.registered_user.gender ? "Female" : "Male" %>
            </td>
          </tr>
          <tr>
            <td>
              Date of Birth
            </td>
            <td>
              <%= child.registered_user.birth_date %>
            </td>
          </tr>
          <tr>
            <td>
              Email
            </td>
            <td>
              <%= child.registered_user.email %>
            </td>
          </tr>
        </tbody>
      </table>
      <!-- verify and reject buttons -->
      <div class="verify_reject">
      <!-- verify and reject with username -->
      <div class="round_button" onclick="verify(<%= child.registered_user.username %>)">
          <p class="round_inner">Verify</p>
      </div>
      <div class="round_button" onclick="reject(<%= child.registered_user.username %>)">
        <p class="round_inner">Reject</p>
      </div>
      </div>
    </div>
  </div>
<% end %>